<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Chadikwa - {% block title %}{% endblock %}</title>
        <link rel="icon" href="/app/public/favicon.ico">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% if app.user %}
            <div {{ vue_component('NavbarOffline') }}></div>
        {% else %}
            <div {{ vue_component('NavbarOnline') }}></div>
        {% endif %}
        {% block body %}{% endblock %}
    </body>
</html>
